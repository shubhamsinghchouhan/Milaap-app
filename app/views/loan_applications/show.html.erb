<style type="text/css">
  /* For the Navbar */
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
  }

  li {
    float: left;
    border-right:1px solid #bbb;
  }

  li:last-child {
    border-right: none;
  }

  li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }

  li a:hover:not(.active) {
    background-color: #111;
  }

  .active {
    background-color: #04AA6D;
  }

  /* For the Table */
  table {
    font-family: arial, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  td, th {
    border: 1px solid #dddddd;
    text-align: left;
    padding: 8px;
  }

  tr:nth-child(even) {
    background-color: #dddddd;
  }
</style>
<div>
  <ul>
    <li>
      <%= link_to "Apply", {action: 'new', controller: 'loan_applications'}%>
    </li>
    <li>
      <%= link_to "List Applications", {action: 'index', controller: 'loan_applications'}, class: 'active'%>
    </li>
  </ul>

  <h1>Your Loan Application Details</h1>

  <p id="notice"><%= notice %></p>

  <div class="field">
    <table>
      <h3><b>User Identity and Bank details:</b></h3>
      <tr>
        <td>User email:</td>
        <td><%= @loan_application.email %></td>
      </tr>
      <tr>
        <td>User Pan card:</td>
        <td><%= @loan_application.pan_card %></td>
      </tr>
      <tr>
        <td>User Aadhar Number:</td>
        <td><%= @loan_application.aadhar_number %></td>
      </tr>
      <tr>
        <td>Bank account number:</td>
        <td><%= @loan_application.account_number %></td>
      </tr>
      <tr>
        <td>Bank account IFSC:</td>
        <td><%= @loan_application.ifsc_number %></td>
      </tr>
      <tr>
        <td>Monthly recurring inflow:</td>
        <td><%= @loan_application.inflow_amount %></td>
      </tr>
      <tr>
        <td>Monthly recurring outflow:</td>
        <td><%= @loan_application.outflow_amount %></td>
      </tr>
      <tr>
        <td>Credit Limit</td>
        <td><%= @loan_application.credit_limit %></td>
      </tr>
    </table>
  </div>
</div>