<style type="text/css">
  /* For the Loan Application Table */

  #loan_applications {
    font-family: Arial, Helvetica, sans-serif;
    border-collapse: collapse;
    width: 100%;
  }

  #loan_applications td, #loan_applications th {
    border: 1px solid #ddd;
    padding: 8px;
  }

  #loan_applications tr:nth-child(even){background-color: #f2f2f2;}

  #loan_applications tr:hover {background-color: #ddd;}

  #loan_applications th {
    padding-top: 12px;
    padding-bottom: 12px;
    text-align: left;
    background-color: #04AA6D;
    color: white;
  }

  /* For the Navbar */
  ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #333;
  }

  li {
    float: left;
    border-right:1px solid #bbb;
  }

  li:last-child {
    border-right: none;
  }

  li a {
    display: block;
    color: white;
    text-align: center;
    padding: 14px 16px;
    text-decoration: none;
  }

  li a:hover:not(.active) {
    background-color: #111;
  }

  .active {
    background-color: #04AA6D;
  }
</style>

<center><h1>Digital credit card creditability app</h1></center>
<ul>
  <li><%= link_to "Apply", {action: 'new', controller: 'loan_applications'}, class: 'active'%></li>
</ul>

<table id="loan_applications">
  <tr>
    <th>Email</th>
    <th>Credit Limit</th>
    <th>System Recommendation</th>
  </tr>

  <% @loan_applications.each do |loan_application| %>
    <tr>
      <td><%= loan_application.bank_detail.user.email %></td>
      <td><%= loan_application.credit_limit %></td>
      <td><%= loan_application.system_recommendation %></td>
    </tr>
  <% end %>
</table>